@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link btn-settings text-dark" style="margin:5px" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @UserManager.Users.FirstOrDefault(a => a.Id == UserManager.GetUserId(User)).FirstName</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-settings btn-link text-dark" style="margin:5px">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link btn-settings text-dark" style="margin:5px" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link btn-settings text-dark" style="margin:5px" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
